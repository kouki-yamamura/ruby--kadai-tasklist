
<h1>タスク一覧</h1>



<table class="table table-striped">
    <thead>
        <tr>
            <th>id</th>
            <th>ステータス</th>
            <th>タスク</th>
        </tr>
    </thead>
    <tbody>
       <% task.each do |tasks|%> 
        <tr>
            <td><%= link_to tasks.id ,tasks%></td>
            <td><%= tasks.status %></td>
            <td><%= tasks.content %></td>
        </tr>
        <% end %>
    </tbody>
</table>
<div>
  <%= paginate task %>   
</div>




<%=link_to '新規メッセージの投稿' , new_task_path ,class: "btn btn-primary"%>
    